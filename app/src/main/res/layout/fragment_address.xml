<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bodybackground"
    android:orientation="vertical"
    android:padding="5dp" >

    <requestFocus />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Address"
                android:gravity="center"
                android:textSize="36sp"
                android:textColor="#5c4a3d"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/underline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading"
                android:background="@drawable/underline"
                android:layout_centerHorizontal="true" />



            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name to save as:"
                android:textSize="16sp"
                android:layout_below="@+id/underline"
                 android:textColor="#5c4a3d"/>

            <EditText
                android:id="@+id/rg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView1"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rect_text_edit_border"
                android:ems="10"
                android:minHeight="40dp"
                android:paddingLeft="5dp" />
            
            
             <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rg_name"  
                android:text="Street:"
                android:textSize="16sp"
                 android:textColor="#5c4a3d"/>

            <EditText
                android:id="@+id/rg_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView2"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rect_text_edit_border"
                android:ems="10"
                android:minHeight="40dp"
                android:paddingLeft="5dp" />

            <Button
                android:id="@+id/rg_save"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/addspin"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:background="@drawable/buttonpress"
                android:text="Save"
                android:textColor="@color/white"/>
            
              <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rg_street"
                android:text="Unit Number(Optional):"
                android:textSize="16sp"
                  android:textColor="#5c4a3d"/>

            <EditText
                android:id="@+id/rg_unitno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView3"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rect_text_edit_border"
                android:ems="10"
                android:inputType="phone"
                android:minHeight="40dp"
                android:paddingLeft="5dp" />
            
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rg_unitno"
                android:text="Complex(Optional):"
                android:textSize="16sp"
                android:textColor="#5c4a3d"/>

            <EditText
                android:id="@+id/rg_complex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView4"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rect_text_edit_border"
                android:ems="10"
                android:minHeight="40dp"
                android:paddingLeft="5dp" />
            
             <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                 android:layout_below="@+id/rg_complex"
                android:text="Suburb:"
                android:textSize="16sp"
                 android:textColor="#5c4a3d"/>

    <EditText
        android:id="@+id/rg_suburb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView5"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rect_text_edit_border"
        android:ems="10"
        android:minHeight="40dp"
        android:paddingLeft="5dp" />
    
     <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                 android:layout_below="@+id/rg_suburb"
                android:text="City:"
                android:textSize="16sp"
         android:textColor="#5c4a3d"/>

    <EditText
        android:id="@+id/rg_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView6"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rect_text_edit_border"
        android:ems="10"
        android:minHeight="40dp"
        android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rg_city"
                android:text="Province:"
                android:textSize="16sp"
                android:textColor="#5c4a3d"/>


            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addspin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView7"
                android:background="@drawable/dropdown"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>