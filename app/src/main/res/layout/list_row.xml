<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_category_top2" />
    <RelativeLayout
        android:id="@+id/Rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/head"
        android:padding="5dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/border"
        android:padding="2dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="#5c4a3d"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/cat1"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/cat2"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/cat3"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/cat4"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/cat5"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/cat6"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/cat7"
            android:layout_width="wrap_content"
            android:layout_height="50dp"   />

        <ImageView
            android:id="@+id/cat8"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/cat9"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/cat10"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />


    </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="#5c4a3d"
                android:text="Opening Hours (show all)"/>
        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/rect_text_edit_border">
            <TextView
                android:id="@+id/sun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="#5c4a3d"
                android:text="Sunday"/>
            <TextView
                android:id="@+id/mon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="#5c4a3d"
                android:text="Monday"/>
            <TextView
                android:id="@+id/tue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#5c4a3d"
                android:textSize="16sp"
                android:text="Tuesday"/>
            <TextView
                android:id="@+id/wed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="#5c4a3d"
                android:text="Wednesday"/>
            <TextView
                android:id="@+id/thur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="#5c4a3d"
                android:text="Thursday"/>
            <TextView
                android:id="@+id/fri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="#5c4a3d"
                android:text="Friday"/>
            <TextView
                android:id="@+id/sat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="#5c4a3d"
                android:text="Saturday"/>

            </LinearLayout>


        </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/call_btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/buttonpress"
            android:text="Call Restaurant"
            android:textColor="@color/white"
            android:layout_weight="1"/>

    <Button
        android:id="@+id/direction_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/orangebutton"
        android:text="Directions"
        android:textColor="@color/white"
        android:layout_weight="1"/>



    </LinearLayout>

        <TextView
            android:id="@+id/bizid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/white" />


    <TextView
        android:id="@+id/bizClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignTop="@+id/thumbnail" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/address"
        android:layout_alignRight="@+id/address"
        android:text="TextView"
        android:textColor="@color/distance" />
    <TextView
        android:id="@+id/Active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/address"
        android:layout_below="@+id/distance"
        android:text="Active"
        android:textColor="@color/distance" />

      </RelativeLayout>
    <ImageView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_category_bottom2"
        android:layout_below="@+id/Rel1"/>


</RelativeLayout>